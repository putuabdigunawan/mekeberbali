---
import FeatureBanner from "@/components/features/FeatureBanner.astro";
import ProjectManagement from "@/components/features/ProjectManagement.astro";
import Shape from "@/components/Shape.astro";
import Base from "@/layouts/Base.astro";
import Cta from "@/layouts/partials/Cta.astro";
import type { CollectionEntry } from "astro:content";
import { getEntry } from "astro:content";

const bali = (await getEntry("bali", "-index")) as CollectionEntry<"bali">;
---

<Base
  title={bali.data.title}
  meta_title={bali.data.meta_title}
  description={bali.data.description}
  image={bali.data.image}
>
  <FeatureBanner features={bali.data} />
  <ProjectManagement features={bali.data} />
  <Cta />
</Base>
